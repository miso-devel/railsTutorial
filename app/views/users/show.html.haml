%div
  %h1.font-bold.text-4xl Users#show
  .py-5.shadow-lg.mx-20
    = render 'follow_form' if logged_in?
    .py-5.font-bold.mx-auto.my-0.flex.justify-center.items-center= gravatar_for @user
    %p.py-5.font-bold
      NAME：#{@user.name}
    %p.py-5.font-bold
      EMAIL：#{@user.email}
  .my-20
    - if @user.microposts.any?
      %h3
        Microposts (#{@user.microposts.count})
      %ol.microposts
        = render @microposts
      = will_paginate @microposts
