<header class="grid grid-cols-11 p-10 text-center place-items-center bg-red-400 rounded-lg">
    <%= link_to "sample app", root_path, id: "logo", class:"font-extrabold text-4xl col-span-2" %>
    <%= link_to "Home",   root_path ,class:"font-extrabold text-lg col-start-5" %>
    <%= link_to "Help",   help_path ,class:"font-extrabold text-lg" %>
    <%= link_to "About", about_path ,class:"font-extrabold text-lg" %>
    <%= link_to "Contact", contact_path ,class:"font-extrabold text-lg" %>


    <% if logged_in? %>
    <%= link_to "Log out", logout_path, method: :delete,class:"font-extrabold text-lg" %>
    <%= link_to "Settings", '#',class:"font-extrabold text-lg" %>
    <%= link_to "profile", current_user ,class:"font-extrabold text-lg" %>
    <% else %>
    <%= link_to "signup", signup_path ,class:"font-extrabold text-lg" %>
    <%= link_to "login", login_path ,class:"font-extrabold text-lg" %>
    <% end %>


</header>