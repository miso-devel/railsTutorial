%div
  %h1.font-bold.text-4xl PasswordResets#new
  .shadow-2xl.justify-center.m-20.py-10.px-40.grid.grid-cols-1.text-center
    = form_with(url: password_resets_path, scope: :password_reset, local: true) do |f|
      .py-3.grid.grid-cols-2
        = f.label :email
        = f.text_field :email
      .text-center.my-5
        = f.submit "Submit", class: "p-3 bg-amber-400 rounded-lg"
